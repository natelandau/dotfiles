{{- if eq .chezmoi.os "linux" }}

# Run startup scripts

if [[ -f "{{ .directories.user_bin_dir }}/linux-startup.sh" ]]; then
    "${HOME}"/bin/linux-startup.sh
fi

# Aliases and Functions

alias sag='sudo apt-get'

aup() {
    # List available updated from apt-get

    sudo apt update
    apt list --upgradable
}

# Systemctl aliases

alias reboot="sudo systemctl reboot"
alias sstop="sudo systemctl stop"
alias sstatus="sudo systemctl status"

# Start and then view status of service
sstart() {
    sstart systemctl start "$1"
    sudo systemctl status "$1"
}

# Restart and then view status of service
srestart() {
    sudo systemctl restart "$1"
    sudo systemctl status "$1"
}

# Journalctl aliases
alias logs='sudo journalctl -fu'
alias logs-all='sudo journalctl -u'

_fix_systemctl_() {
    # Fix sysctls
    if command -v systemctl &>/dev/null; then
        _check_systemd_user_() {
            local output
            output=$(systemctl --user status 2>&1)
            local status=$?

            if [[ $status -ne 0 ]]; then
                if echo "$output" | grep -q "Failed to connect to bus: No medium found"; then
                    export XDG_RUNTIME_DIR="/run/user/$(id -u)"
                    export DBUS_SESSION_BUS_ADDRESS="unix:path=${XDG_RUNTIME_DIR}/bus"
                fi
            fi
        }
        _check_systemd_user_

    fi
}
_fix_systemctl_

{{- end }}
